{
    "Framework": "jasmine",
    "TestHarnessLocationMode": "TestFileAdjacent",
    "TypeScriptCodeGenTarget": "ES5",
    "RootReferencePathMode": "SettingsFileDirectory",

    "Compile": {
        "Mode": "External",
        "Extensions": [ ".ts" ],
        "ExtensionsWithNoOutput": [ ".d.ts" ]
    },

    "References": [
        { "Path": "../Base/Scripts/Base/", "Include": "*.ts" },
        { "Path": "../Base/Scripts/Base/", "Include": "*.js" },
        { "Path": "Scripts/typings/jasmine/", "Include": "*.ts", "IsTestFrameworkFile": true }
    ],

    "Tests": [
        { "Path": "Unit tests", "Include": "*.ts" }
    ]
}